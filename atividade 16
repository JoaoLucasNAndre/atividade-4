programa
{
	
	funcao inicio()
	{
		inteiro num1
		inteiro numPar = 0
		inteiro numImpar = 0

		para(inteiro i=0; i < 10; i++){
			escreva("Diga um número: ")
			leia(num1)

			se(num1%2 == 0){
				numPar++
			} senao {
				numImpar++
			}
		}
			escreva("São ", numPar, " número(s) par(es) e ", numImpar," número(s) impar(es).")
	
	}
}
